{% extends 'base.html' %}
{% block title %}Dashboard - ASKA Insights{% endblock %}

{% block content %}
<section class="mb-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h1 class="h3 fw-bold">Ringkasan Percakapan</h1>
            <p class="text-muted mb-0">Pantau performa bot ASKA dan interaksi pengguna secara real-time.</p>
        </div>
        <div class="text-end">
            <span class="badge text-bg-light border">Update {{ generated_at.strftime('%d %b %Y %H:%M') }}</span>
        </div>
    </div>
    <div class="row g-3">
        <div class="col-lg-3 col-sm-6">
            <div class="card stat-card border-0 shadow-sm h-100">
                <div class="card-body">
                    <span class="text-secondary text-uppercase small fw-semibold">Total Pesan</span>
                    <h2 class="display-6 fw-bold mt-2">{{ metrics.total_messages }}</h2>
                    <p class="mb-0 text-muted">Seluruh pesan yang masuk & keluar.</p>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-sm-6">
            <div class="card stat-card border-0 shadow-sm h-100" id="uniqueUsersCard"
                 data-counts='{{ {"all": metrics.unique_users_all,"today": metrics.unique_users_today,"week": metrics.unique_users_7d,"month": metrics.unique_users_30d,"year": metrics.unique_users_365d} | tojson }}'>
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <span class="text-secondary text-uppercase small fw-semibold">Pengguna Unik</span>
                        <div class="dropdown">
                            <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" id="uniqueUsersDropdown" data-bs-toggle="dropdown" aria-expanded="false">Semua</button>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="uniqueUsersDropdown">
                                <li><a class="dropdown-item js-unique-users-option active" data-range="all" href="#">Semua</a></li>
                                <li><a class="dropdown-item js-unique-users-option" data-range="today" href="#">Hari Ini</a></li>
                                <li><a class="dropdown-item js-unique-users-option" data-range="week" href="#">Seminggu</a></li>
                                <li><a class="dropdown-item js-unique-users-option" data-range="month" href="#">Sebulan</a></li>
                                <li><a class="dropdown-item js-unique-users-option" data-range="year" href="#">Setahun</a></li>
                            </ul>
                        </div>
                    </div>
                    <h2 class="display-6 fw-bold mt-2 mb-1" id="uniqueUsersValue">{{ metrics.unique_users_all }}</h2>
                    <p class="mb-0 text-muted">Jumlah pengguna yang pernah chat.</p>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-sm-6">
            <div class="card stat-card border-0 shadow-sm h-100">
                <div class="card-body">
                    <span class="text-secondary text-uppercase small fw-semibold">Pesan {{ metrics.window_days }} Hari</span>
                    <h2 class="display-6 fw-bold mt-2">{{ metrics.messages_window }}</h2>
                    <p class="mb-0 text-muted">Aktivitas terbaru {{ metrics.window_days }} hari.</p>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-sm-6">
            <div class="card stat-card border-0 shadow-sm h-100">
                <div class="card-body">
                    <span class="text-secondary text-uppercase small fw-semibold">Laporan Bullying</span>
                    <h2 class="display-6 fw-bold mt-2">{{ metrics.bullying_total - metrics.bullying_spam }}</h2>
                    <p class="mb-0 text-muted">
                        Pending {{ metrics.bullying_pending }} | Diproses {{ metrics.bullying_in_progress }} | Selesai {{ metrics.bullying_resolved }}
                    </p>
                </div>
            </div>
        </div>
    {% if metrics.bullying_pending %}
    <div class="alert alert-danger d-flex justify-content-between align-items-center mt-3">
        <div>
            <strong>{{ metrics.bullying_pending }} laporan bullying</strong> menunggu tindak lanjut segera.
            <span class="d-block small mb-0">Pastikan tim sekolah sudah menerima dan menindaklanjuti laporan ini.</span>
        </div>
        <a class="btn btn-light btn-sm" href="{{ url_for('admin.main.bullying_reports') }}">Lihat laporan</a>
    </div>
    {% elif metrics.bullying_in_progress %}
    <div class="alert alert-warning d-flex justify-content-between align-items-center mt-3">
        <div>
            <strong>{{ metrics.bullying_in_progress }} laporan bullying</strong> sedang dalam proses penanganan.
            <span class="d-block small mb-0">Update statusnya jika sudah ada perkembangan terbaru.</span>
        </div>
        <a class="btn btn-outline-warning btn-sm" href="{{ url_for('admin.main.bullying_reports', status='in_progress') }}">Pantau progres</a>
    </div>
    {% endif %}

    </div>
</section>

<section class="row g-3">
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm mb-3">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <div>
                        <h2 class="h5 fw-bold mb-1">Tren Volume Pesan</h2>
                        <p class="text-muted mb-0">14 hari terakhir</p>
                    </div>
                    <div class="text-end">
                        <span class="badge text-bg-light border">Avg {{ metrics.avg_response_ms }} ms - P90 {{ metrics.p90_response_ms }} ms</span>
                    </div>
                </div>
                <div class="chart-container" style="height: 320px;">
                    <canvas id="activityChart"></canvas>
                </div>
            </div>
        </div>
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <div>
                        <h2 class="h6 fw-bold mb-1">Kata Kunci Populer</h2>
                        <p class="text-muted mb-0">14 hari terakhir</p>
                    </div>
                </div>
                <div class="chart-container" style="height: 280px;">
                    <canvas id="keywordChart"></canvas>
                </div>
                {% if not keyword_labels %}
                    <p class="text-muted small mb-0 mt-3">Belum ada data kata kunci.</p>
                {% endif %}
            </div>
        </div>
    </div>
    <div class="col-lg-4">

        <div class="card border-0 shadow-sm mb-3">
            <div class="card-body">
                <h2 class="h6 fw-bold">Pertanyaan Terbaru</h2>
                <ul class="list-group list-group-flush list-group-timeline">
                    {% for item in recent_questions %}
                    <li class="list-group-item px-0 question-item" style="cursor: pointer;" data-question="{{ item.text }}" data-url="{{ url_for('admin.main.chat_thread', user_id=item.user_id) }}">
                        <div class="small text-muted">{{ item.created_at.strftime('%d %b %Y %H:%M') }}</div>
                        <div class="fw-semibold">{{ item.username or 'Anon' }} ({{ item.user_id }})</div>
                        <div class="text-truncate-2">{{ item.text }}</div>
                    </li>
                    {% else %}
                    <li class="list-group-item px-0 text-muted">Belum ada data.</li>
                    {% endfor %}
                </ul>
            </div>
        </div>
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <h2 class="h6 fw-bold">Top User Aktif</h2>
                <ul class="list-group list-group-flush">
                    {% for item in top_users %}
                    <li class="list-group-item px-0 d-flex justify-content-between">
                        <div>
                            <div class="fw-semibold">{{ item.username }}</div>
                            <small class="text-muted">ID {{ item.user_id }}</small>
                        </div>
                        <span class="badge rounded-pill text-bg-primary">{{ item.messages }}</span>
                    </li>
                    {% else %}
                    <li class="list-group-item px-0 text-muted">Belum ada data.</li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
</section>

<!-- Confirmation Modal -->
<div class="modal fade" id="chatConfirmationModal" tabindex="-1" aria-labelledby="chatConfirmationModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="chatConfirmationModalLabel">Lihat Detail Percakapan</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>Anda akan diarahkan ke halaman detail percakapan untuk pertanyaan:</p>
        <blockquote class="blockquote">
          <p id="questionText" class="mb-0"></p>
        </blockquote>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Batal</button>
        <a href="#" id="confirmChatLink" class="btn btn-primary" target="_blank">Lanjutkan</a>
      </div>
    </div>
  </div>
</div>
{% endblock %}

{% block scripts %}
{{ super() }}
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const modalElement = document.getElementById('chatConfirmationModal');
        if (!modalElement) return;

        const questionTextElement = document.getElementById('questionText');
        const confirmChatLink = document.getElementById('confirmChatLink');
        const chatModal = new bootstrap.Modal(modalElement);

        document.querySelectorAll('.question-item').forEach(item => {
            item.addEventListener('click', function () {
                const question = this.dataset.question;
                const url = this.dataset.url;

                if (questionTextElement) {
                    questionTextElement.textContent = question;
                }
                if (confirmChatLink) {
                    confirmChatLink.href = url;
                }
                chatModal.show();
            });
        });

        if (confirmChatLink) {
            confirmChatLink.addEventListener('click', function(event) {
                // The link will open in a new tab because of target="_blank"
                // Now, we just need to hide the modal
                chatModal.hide();
            });
        }
    });
</script>
<script>
    const activityCtx = document.getElementById('activityChart');
    const activityLabels = {{ chart_labels|tojson }};
    const activityValues = {{ chart_values|tojson }};

    if (activityCtx) {
        new Chart(activityCtx, {
            type: 'line',
            data: {
                labels: activityLabels,
                datasets: [{
                    label: 'Jumlah Pesan',
                    data: activityValues,
                    tension: 0.3,
                    fill: true,
                    borderColor: '#0d6efd',
                    backgroundColor: 'rgba(13, 110, 253, 0.1)',
                    pointBackgroundColor: '#0d6efd',
                }]
            },
            options: {
                maintainAspectRatio: false,
                plugins: {
                    legend: { display: false }
                },
                scales: {
                    y: { beginAtZero: true }
                }
            }
        });
    }

    const keywordCtx = document.getElementById('keywordChart');
    const keywordLabels = {{ keyword_labels|tojson }};
    const keywordCounts = {{ keyword_counts|tojson }};

    if (keywordCtx && keywordLabels.length) {
        new Chart(keywordCtx, {
            type: 'bar',
            data: {
                labels: keywordLabels,
                datasets: [{
                    label: 'Jumlah Sebutan',
                    data: keywordCounts,
                    backgroundColor: '#20c997',
                    borderColor: '#20c997',
                    borderWidth: 1,
                }]
            },
            options: {
                indexAxis: 'y',
                maintainAspectRatio: false,
                plugins: {
                    legend: { display: false }
                },
                scales: {
                    x: {
                        beginAtZero: true,
                        ticks: { precision: 0 }
                    }
                }
            }
        });
    }
    const uniqueCard = document.getElementById('uniqueUsersCard');
    const uniqueValueEl = document.getElementById('uniqueUsersValue');
    const uniqueDropdown = document.getElementById('uniqueUsersDropdown');
    if (uniqueCard && uniqueValueEl && uniqueDropdown) {
        let counts = {};
        try {
            counts = JSON.parse(uniqueCard.dataset.counts || '{}');
        } catch (error) {
            counts = {};
        }
        const options = uniqueCard.querySelectorAll('.js-unique-users-option');
        options.forEach((option) => {
            option.addEventListener('click', (event) => {
                event.preventDefault();
                const range = option.dataset.range || 'all';
                const value = counts[range] ?? counts.all ?? 0;
                uniqueValueEl.textContent = value;
                uniqueDropdown.textContent = option.textContent.trim();
                options.forEach((item) => item.classList.remove('active'));
                option.classList.add('active');
            });
        });
    }

</script>
{% endblock %}
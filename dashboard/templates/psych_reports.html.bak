{% extends 'base.html' %}
{% block title %}Laporan Konseling - ASKA Insights{% endblock %}

{% block content %}
<section class="mb-4">
    <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
        <div>
            <h1 class="h4 fw-bold mb-1">Laporan Konseling</h1>
            <p class="text-muted mb-0">Pantau cerita sensitif dari siswa supaya guru BK bisa menindaklanjuti dengan cepat.</p>
        </div>
        <a class="btn btn-outline-primary btn-sm" href="{{ url_for('admin.main.dashboard') }}">Kembali ke Dashboard</a>
    </div>

    <div class="row g-3 mb-3">
        <div class="col-md-3 col-sm-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <span class="text-secondary text-uppercase small fw-semibold">Open</span>
                    <h2 class="h3 fw-bold mt-1 text-danger">{{ summary.get('open', 0) }}</h2>
                    <p class="small text-muted mb-0">Belum ditangani guru.</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <span class="text-secondary text-uppercase small fw-semibold">Diproses</span>
                    <h2 class="h3 fw-bold mt-1 text-warning">{{ summary.get('in_progress', 0) }}</h2>
                    <p class="small text-muted mb-0">Sedang ditangani guru.</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <span class="text-secondary text-uppercase small fw-semibold">Selesai</span>
                    <h2 class="h3 fw-bold mt-1 text-success">{{ summary.get('resolved', 0) }}</h2>
                    <p class="small text-muted mb-0">Laporan konseling sudah ditutup.</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <span class="text-secondary text-uppercase small fw-semibold">Total Laporan Konseling</span>
                    <h2 class="h3 fw-bold mt-1">{{ summary.get('total', 0) }}</h2>
                    <p class="small text-muted mb-0">Semua laporan konseling yang tersimpan.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <span class="text-secondary text-uppercase small fw-semibold">Kritis</span>
                    <h2 class="h4 fw-bold mt-1 text-danger">{{ severity_counts.get('critical', 0) }}</h2>
                    <p class="small text-muted mb-0">Perlu intervensi cepat.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <span class="text-secondary text-uppercase small fw-semibold">Elevated</span>
                    <h2 class="h4 fw-bold mt-1 text-warning">{{ severity_counts.get('elevated', 0) }}</h2>
                    <p class="small text-muted mb-0">Butuh pemantauan dekat.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <span class="text-secondary text-uppercase small fw-semibold">General</span>
                    <h2 class="h4 fw-bold mt-1 text-success">{{ severity_counts.get('general', 0) }}</h2>
                    <p class="small text-muted mb-0">Keluhan ringan / umum.</p>
                </div>
            </div>
        </div>
    </div>

    <ul class="nav nav-pills mb-3">
        <li class="nav-item">
            <a class="nav-link {% if not filter_status %}active{% endif %}" href="{{ url_for('admin.main.psych_reports', severity=filter_severity) }}">Semua Status</a>
        </li>
        <li class="nav-item">
            <a class="nav-link {% if filter_status == 'open' %}active{% endif %}" href="{{ url_for('admin.main.psych_reports', status='open', severity=filter_severity) }}">Open</a>
        </li>
        <li class="nav-item">
            <a class="nav-link {% if filter_status == 'in_progress' %}active{% endif %}" href="{{ url_for('admin.main.psych_reports', status='in_progress', severity=filter_severity) }}">Diproses</a>
        </li>
        <li class="nav-item">
            <a class="nav-link {% if filter_status == 'resolved' %}active{% endif %}" href="{{ url_for('admin.main.psych_reports', status='resolved', severity=filter_severity) }}">Selesai</a>
        </li>
        <li class="nav-item">
            <a class="nav-link {% if filter_status == 'archived' %}active{% endif %}" href="{{ url_for('admin.main.psych_reports', status='archived', severity=filter_severity) }}">Diarsipkan</a>
        </li>
    </ul>

    <ul class="nav nav-pills mb-3">
        <li class="nav-item">
            <a class="nav-link {% if not filter_severity %}active{% endif %}" href="{{ url_for('admin.main.psych_reports', status=filter_status) }}">Semua Severity</a>
        </li>
        <li class="nav-item">
            <a class="nav-link {% if filter_severity == 'critical' %}active{% endif %}" href="{{ url_for('admin.main.psych_reports', status=filter_status, severity='critical') }}">Kritis</a>
        </li>
        <li class="nav-item">
            <a class="nav-link {% if filter_severity == 'elevated' %}active{% endif %}" href="{{ url_for('admin.main.psych_reports', status=filter_status, severity='elevated') }}">Elevated</a>
        </li>
        <li class="nav-item">
            <a class="nav-link {% if filter_severity == 'general' %}active{% endif %}" href="{{ url_for('admin.main.psych_reports', status=filter_status, severity='general') }}">General</a>
        </li>
    </ul>

    <div id="bulk-action-bar" class="d-none card shadow-sm border-0 mb-3">
        <div class="card-body d-flex justify-content-between align-items-center">
            <div>
                <span id="selected-count" class="fw-bold">0</span> laporan dipilih
            </div>
            <div>
                <button id="bulk-archive-btn" class="btn btn-secondary btn-sm">Arsipkan</button>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <form id="bulk-action-form">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th scope="col" style="width: 3%;"></th>
                                <th scope="col" style="width: 14%;">Dibuat</th>
                                <th scope="col" style="width: 16%;">Pelapor</th>
                                <th scope="col">Ringkasan Laporan Konseling</th>
                                <th scope="col" style="width: 12%;">Severity</th>
                                <th scope="col" style="width: 12%;">Status</th>
                                <th scope="col" style="width: 18%;">Aksi</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for item in records %}
                            <tr id="report-{{ item.id }}">
                                <td><input type="checkbox" class="form-check-input report-checkbox" name="report_ids" value="{{ item.id }}"></td>
                                <td>
                                    <div class="small fw-semibold">{{ item.created_at.strftime('%d %b %Y %H:%M') }}</div>
                                    {% if item.updated_at %}
                                    <div class="text-muted small">Update: {{ item.updated_at.strftime('%d %b %Y %H:%M') }}</div>
                                    {% endif %}
                                    {% if item.chat_created_at %}
                                    <div class="text-muted small">Chat: {{ item.chat_created_at.strftime('%d %b %Y %H:%M') }}</div>
                                    {% endif %}
                                </td>
                                <td>
                                    <div class="fw-semibold">{{ item.username or 'Anon' }}</div>
                                    <div class="text-muted small">ID {{ item.user_id or '-' }}</div>
                                    {% if item.chat_log_id and item.user_id %}
                                    <a class="small" href="{{ url_for('admin.main.chat_thread', user_id=item.user_id) }}">Lihat percakapan</a>
                                    {% endif %}
                                </td>
                                <td>
                                    <div class="text-wrap" style="white-space: pre-wrap;">{{ item.summary or item.message }}</div>
                                    {% if item.metadata and item.metadata.stage %}
                                    <div class="text-muted small mt-2">Tahap: {{ item.metadata.stage|replace('_', ' ')|title }}</div>
                                    {% endif %}
                                    {% if item.metadata and item.metadata.source %}
                                    <div class="text-muted small">Sumber: {{ item.metadata.source|capitalize }}</div>
                                    {% endif %}
                                </td>
                                <td>
                                    {% set severity = item.severity or 'general' %}
                                    {% if severity == 'critical' %}
                                    <span class="badge text-bg-danger text-uppercase">Critical</span>
                                    {% elif severity == 'elevated' %}
                                    <span class="badge text-bg-warning text-dark text-uppercase">Elevated</span>
                                    {% else %}
                                    <span class="badge text-bg-success text-uppercase">General</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% set status = item.status or 'open' %}
                                    {% if status == 'resolved' %}
                                    <span class="badge text-bg-success">Selesai</span>
                                    {% elif status == 'in_progress' %}
                                    <span class="badge text-bg-warning text-dark">Diproses</span>
                                    {% elif status == 'archived' %}
                                    <span class="badge text-bg-secondary text-dark">Diarsipkan</span>
                                    {% else %}
                                    <span class="badge text-bg-danger">Open</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if item.user_id %}
                                    <a class="btn btn-outline-primary btn-sm" href="{{ url_for('admin.main.psych_report_user_detail', user_id=item.user_id) }}">Detail laporan konseling</a>
                                    {% else %}
                                    <a class="btn btn-outline-primary btn-sm" href="{{ url_for('admin.main.psych_report_single_detail', report_id=item.id) }}">Detail laporan konseling</a>
                                    {% endif %}
                                </td>
                            </tr>
                            {% else %}
                            <tr>
                                <td colspan="7" class="text-center text-muted py-4">Belum ada catatan konseling.</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </form>
            </div>
        </div>
    </div>

    {% if total_pages > 1 %}
    <nav class="mt-3">
        <ul class="pagination pagination-sm">
            <li class="page-item {% if page == 1 %}disabled{% endif %}">
                <a class="page-link" href="{{ url_for('admin.main.psych_reports', status=filter_status, severity=filter_severity, page=page-1) }}">Prev</a>
            </li>
            {% for number in range(1, total_pages + 1) %}
            <li class="page-item {% if number == page %}active{% endif %}">
                <a class="page-link" href="{{ url_for('admin.main.psych_reports', status=filter_status, severity=filter_severity, page=number) }}">{{ number }}</a>
            </li>
            {% endfor %}
            <li class="page-item {% if page == total_pages %}disabled{% endif %}">
                <a class="page-link" href="{{ url_for('admin.main.psych_reports', status=filter_status, severity=filter_severity, page=page+1) }}">Next</a>
            </li>
        </ul>
    </nav>
    {% endif %}
</section>
{% endblock %}

{% block scripts %}
{{ super() }}
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const bulkActionBar = document.getElementById('bulk-action-bar');
        const selectedCount = document.getElementById('selected-count');
        const bulkArchiveBtn = document.getElementById('bulk-archive-btn');
        const reportCheckboxes = document.querySelectorAll('.report-checkbox');

        function updateBulkActionBar() {
            const checkedCheckboxes = document.querySelectorAll('.report-checkbox:checked');
            const count = checkedCheckboxes.length;

            if (count > 0) {
                bulkActionBar.classList.remove('d-none');
                selectedCount.textContent = count;
            } else {
                bulkActionBar.classList.add('d-none');
            }
        }

        reportCheckboxes.forEach(checkbox => {
            checkbox.addEventListener('change', function () {
                updateBulkActionBar();
            });
        });

        if (bulkArchiveBtn) {
            bulkArchiveBtn.addEventListener('click', function () {
                const form = document.getElementById('bulk-action-form');
                const formData = new FormData(form);
                const reportIds = formData.getAll('report_ids');

                if (reportIds.length === 0) {
                    return;
                }

                fetch("{{ url_for('admin.main.bulk_update_psych_status') }}", {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        report_ids: reportIds,
                        status: 'archived'
                    }),
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        const originalStatuses = {};
                        reportIds.forEach(id => {
                            const row = document.getElementById('report-' + id);
                            if (row) {
                                const statusCell = row.querySelector('td:nth-child(6)');
                                originalStatuses[id] = statusCell.innerHTML;
                                row.style.opacity = '0.5';
                                statusCell.innerHTML = '<span class="badge text-bg-secondary text-dark">Diarsipkan</span>';
                            }
                        });

                        // Show undo toast
                        const toast = document.createElement('div');
                        toast.className = 'toast align-items-center text-bg-primary border-0 show';
                        toast.innerHTML = `
                            <div class="d-flex">
                                <div class="toast-body">
                                    ${reportIds.length} laporan diarsipkan.
                                </div>
                                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                            </div>
                            <div class="toast-body">
                                <button id="undo-btn" class="btn btn-sm btn-light">Urungkan</button>
                            </div>
                        `;
                        const toastContainer = document.querySelector('.toast-container');
                        if (toastContainer) {
                            toastContainer.appendChild(toast);
                            const undoBtn = document.getElementById('undo-btn');
                            if(undoBtn) {
                                undoBtn.addEventListener('click', function() {
                                    fetch("{{ url_for('admin.main.bulk_update_psych_status') }}", {
                                        method: 'POST',
                                        headers: {
                                            'Content-Type': 'application/json',
                                        },
                                        body: JSON.stringify({
                                            report_ids: reportIds,
                                            status: 'undo' // Special status for undo
                                        }),
                                    })
                                    .then(response => response.json())
                                    .then(data => {
                                        if(data.success) {
                                            reportIds.forEach(id => {
                                                const row = document.getElementById('report-' + id);
                                                if (row) {
                                                    row.style.opacity = '1';
                                                    const statusCell = row.querySelector('td:nth-child(6)');
                                                    statusCell.innerHTML = originalStatuses[id];
                                                }
                                            });
                                            toast.remove();
                                        }
                                    });
                                });
                            }
                            setTimeout(() => {
                                toast.remove();
                            }, 5000);
                        }
                    }
                });
            });
        }
    });
</script>
{% endblock %}